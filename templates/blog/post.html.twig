
{% extends 'base.html.twig' %}

{% block title %} {{ page_title }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles pour le contenu généré par OpenAI */
        .article-content h2 {
            @apply text-3xl font-bold text-gray-900 dark:text-white mt-8 mb-4;
        }
        .article-content h3 {
            @apply text-2xl font-semibold text-gray-900 dark:text-white mt-6 mb-3;
        }
        .article-content h4 {
            @apply text-xl font-medium text-gray-900 dark:text-white mt-4 mb-2;
        }
        .article-content p {
            @apply mb-4 text-gray-700 dark:text-gray-300 leading-relaxed;
        }
        .article-content ul {
            @apply mb-4 space-y-2;
        }
        .article-content ol {
            @apply mb-4 space-y-2 list-decimal list-inside;
        }
        .article-content li {
            @apply text-gray-700 dark:text-gray-300 leading-relaxed;
        }
        .article-content strong {
            @apply font-semibold text-gray-900 dark:text-white;
        }
        .article-content em {
            @apply italic text-gray-800 dark:text-gray-200;
        }
        .article-content ul li {
            @apply flex items-start;
        }
        .article-content blockquote {
            @apply border-l-4 border-blue-500 pl-4 italic text-gray-600 dark:text-gray-400 my-4;
        }

        /* Styles CSS classiques pour compatibilité */
        .article-content {
            line-height: 1.7;
        }
        .article-content h2 {
            font-size: 1.875rem; /* 30px */
            font-weight: 700;
            color: #1f2937;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }
        .dark .article-content h2 {
            color: #f9fafb;
        }
        .article-content h3 {
            font-size: 1.5rem; /* 24px */
            font-weight: 600;
            color: #1f2937;
            margin-top: 1.5rem;
            margin-bottom: 0.75rem;
        }
        .dark .article-content h3 {
            color: #f9fafb;
        }
        .article-content h4 {
            font-size: 1.25rem; /* 20px */
            font-weight: 500;
            color: #1f2937;
            margin-top: 1rem;
            margin-bottom: 0.5rem;
        }
        .dark .article-content h4 {
            color: #f9fafb;
        }
        .article-content p {
            margin-bottom: 1rem;
            color: #374151;
        }
        .dark .article-content p {
            color: #d1d5db;
        }
        .article-content ul {
            margin-bottom: 1rem;
            padding-left: 0;
        }
        .article-content li {
            color: #374151;
            margin-bottom: 0.5rem;
            list-style: none;
        }
        .dark .article-content li {
            color: #d1d5db;
        }
        .article-content strong {
            font-weight: 600;
            color: #1f2937;
        }
        .dark .article-content strong {
            color: #f9fafb;
        }
        .article-content em {
            font-style: italic;
            color: #1f2937;
        }
        .dark .article-content em {
            color: #e5e7eb;
        }
    </style>
{% endblock %}

{% block body %}
    <main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased">
        <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">
        {% if article %}
            <article class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
                <header class="mb-4 lg:mb-6 not-format">
                    <address class="flex items-center mb-6 not-italic">
                        <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
                            <img class="mr-4 w-16 h-16 rounded-full" src="{{ asset('assets/images/moi.webp') }}" alt="Auteur" loading="lazy" decoding="async"
                                alt="{{article.auteur}} avatar">
                            <div>
                                <a href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white" aria-label="Auteur {{ article.auteur }}">{{article.auteur}}</a>
                                <p class="text-base text-gray-500 dark:text-gray-400">Développeur, &amp; CEO de Sassify &amp; SnapCode™ Agency</p>
                                <p class="text-base text-gray-500 dark:text-gray-400"><time pubdate
                                        datetime="{{ article.createdAt|date('d/m/Y') }}" title="{{ article.titre }}">{{ article.createdAt|date('d/m/Y') }}</time></p>
                            </div>
                        </div>
                    </address>
                    <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">
                        {{ article.titre }}</h1>
                </header>
                <section class="article-content text-gray-900 dark:text-white">
                    {{ article.contenu | raw }}
                </section>
            </article>
        {% else %}
            <div class="mx-auto max-w-screen-sm text-center">
                <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Article
                    introuvable</h2>
                <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">L'article que vous cherchez n'existe pas ou a été supprimé.</p>
                <a href="{{ path('app_blog') }}" class="inline-flex items-center font-medium text-blue-600 dark:text-blue-500 hover:underline">
                    Retour au blog
                </a>
            </div>
        {% endif %}
        </div>
    </main>
{% endblock %}